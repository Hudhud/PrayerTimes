@{
    ViewData["Title"] = "Home Page";
}

<style>
    body {
        background-color: #1a1a1a;
        color: #FFFFFF;
    }

    .prayer-buttons {
        display: flex;
        justify-content: space-around;
        margin-bottom: 25px;
    }

    .prayer-button {
        background-color: transparent;
        color: #FFDC00;
        font-size: 16px;
        border: 1px solid #FFDC00;
        padding: 6px 12px;
        cursor: pointer;
        transition: background-color 0.3s, color 0.3s;
    }

        .prayer-button:hover {
            background-color: #FFDC00;
            color: #1a1a1a;
        }

    .prayer-table {
        width: 100%;
        border-collapse: collapse;
    }

        .prayer-table th,
        .prayer-table td {
            border: 1px solid #FFDC00;
            padding: 8px;
            text-align: center;
        }

        .prayer-table th {
            background-color: #333333;
        }

    .hanafi-asr {
        color: #FFDC00;
        text-align: right;
        margin-top: 25px;
    }
</style>

<div class="text-center">
    @{
        var result = ViewData["prayers"] as List<PrayerViewModel>;
    }
    @{
        DateTime dt = DateTime.Today;
        string dateFormatted = dt.Date.ToString("yyyy-MM-d");
        var prayer = result.First(x => x.fajr_date == dateFormatted);
    }

    <form>
        <div class="prayer-buttons">
            <button class="prayer-button" name="button_value" value="cph" asp-action="check">København</button>
            <button class="prayer-button" name="button_value" value="odense" asp-action="check">Odense</button>
            <button class="prayer-button" name="button_value" value="aarhus" asp-action="check">Århus</button>
            <button class="prayer-button" name="button_value" value="aalborg" asp-action="check">Aalborg</button>
        </div>
    </form>

    <table class="prayer-table">
        <tr>
            <th>Fajr</th>
            <th>Shuruk</th>
            <th>Dhuhr</th>
            <th>Asr</th>
            <th>Maghreb</th>
            <th>Isha</th>
        </tr>
        <tr>
            <td>@Convert.ToDateTime(prayer.fajr_time).AddMinutes(3).ToString("HH:mm")</td>
            <td>@Convert.ToDateTime(prayer.sunrise_time).AddMinutes(3).ToString("HH:mm")</td>
            <td>@Convert.ToDateTime(prayer.zohr_time).AddMinutes(3).ToString("HH:mm")</td>
            <td>@Convert.ToDateTime(prayer.mithl_time).AddMinutes(3).ToString("HH:mm")</td>
            <td>@Convert.ToDateTime(prayer.sunset_time).AddMinutes(3).ToString("HH:mm")</td>
            <td>@Convert.ToDateTime(prayer.esha_time).AddMinutes(3).ToString("HH:mm")</td>
        </tr>
    </table>

    <div class="hanafi-asr">
        Hanafi asr: @Convert.ToDateTime(prayer.mithlain_time).AddMinutes(3).ToString("HH:mm")
    </div>
</div>
